<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javafx_4.HelloController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top: MenuBar -->
    <top>
        <MenuBar>
            <Menu text="Opzioni">
                <MenuItem fx:id="menuShowStats" text="Visualizza Statistiche" onAction="#showStatistics"/>
                <MenuItem fx:id="menuClearList" text="Cancella Lista" onAction="#clearList"/>
                <MenuItem fx:id="menuHideImage" text="Nascondi Immagine" onAction="#hideImage"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Center: Event List -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Eventi Pressioni Tasti"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            
            <ListView fx:id="eventList" VBox.vgrow="ALWAYS"
                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd;"/>
            
            <Label text="Premi un tasto qualsiasi per aggiungere un evento"
                   style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-style: italic;"/>
        </VBox>
    </center>

    <!-- Bottom: Image -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label text="Immagine (appare dopo 10 pressioni)"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            
            <ImageView fx:id="imageView"
                       fitWidth="300"
                       fitHeight="300"
                       preserveRatio="true"/>
        </VBox>
    </bottom>

</BorderPane>
